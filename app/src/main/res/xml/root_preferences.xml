<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:summary="@string/auth_summary"
        app:title="@string/auth">

        <EditTextPreference
            android:defaultValue="@string/auth_consumer_key_default"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            app:key="pref_auth_consumer_key"
            app:title="@string/auth_consumer_key"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/auth_consumer_secret_default"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            app:key="pref_auth_consumer_secret"
            app:title="@string/auth_consumer_secret"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/auth_access_key_default"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            app:key="pref_auth_access_key"
            app:title="@string/auth_access_key"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/auth_access_secret_default"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            app:key="pref_auth_access_secret"
            app:title="@string/auth_access_secret"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue="@string/profile_image_url_https_default"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            app:key="pref_profile_image_url_https"
            app:title="@string/profile_image_url_https"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_current_latitude"
            app:title="@string/current_latitude"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            android:defaultValue=""
            android:selectAllOnFocus="false"
            android:singleLine="true"
            app:key="pref_current_longitude"
            app:title="@string/current_longitude"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory
        app:summary="@string/app_summary"
        app:title="@string/app">

        <SwitchPreferenceCompat
            app:key="pref_is_debug_mode"
            app:title="@string/is_debug_mode" />

    </PreferenceCategory>

</PreferenceScreen>