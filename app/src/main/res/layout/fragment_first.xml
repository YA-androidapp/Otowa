<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstFragment">

    <LinearLayout
        android:id="@+id/linear_layout_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_logged_in" />

        <Button
            android:id="@+id/button_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_tweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_clear"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:enabled="false"
                android:text="@string/clear" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/tweet_prefix"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="start|top"
                    android:hint="@string/prefix"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:lines="1" />

                <EditText
                    android:id="@+id/tweet_suffix"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="start|top"
                    android:hint="@string/suffix"
                    android:importantForAutofill="no"
                    android:inputType="textMultiLine"
                    android:lines="1" />

            </LinearLayout>

            <ImageButton
                android:id="@+id/icon_image"
                android:background="#ffffffff"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:contentDescription="@string/icon"
                android:scaleType="fitCenter" />

        </LinearLayout>

        <EditText
            android:id="@+id/tweet_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|top"
            android:hint="@string/tweet"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:lines="6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_locate"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:enabled="false"
                android:text="@string/locate_unknown"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button_volume_dec"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:text="@string/button_volume_dec"
                app:backgroundTint="#ff0099cc" />


            <Button
                android:id="@+id/button_volume_inc"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:text="@string/button_volume_inc"
                app:backgroundTint="#ff0099cc" />

            <Button
                android:id="@+id/button_volume_max"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:text="@string/button_volume_max"
                app:backgroundTint="#ff0099cc" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>